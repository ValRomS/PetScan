    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/petscan_splashscreen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.PetScanQR</item>
    </style>
</resources>